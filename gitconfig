# Copy this file to ~/.gitconfig
[user]
    email = phil@philratcliffe.co.uk
    name = Phil Ratcliffe

[push]
default = simple

[core]
    editor = vim

[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    type = cat-file -t
    dump = cat-file -p

[credential]
	helper = cache --timeout=360000
